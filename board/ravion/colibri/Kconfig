if TARGET_RAVION_COLIBRI_IMX6

config SYS_BOARD
	default "colibri"

config SYS_CONFIG_NAME
	default "ravion_colibri_imx6"

config SYS_CPU
	default "armv7"

config SYS_SOC
	default "mx6"

config SYS_VENDOR
	default "ravion"

config RAVION_DISPLAY_KOE
	default y

config RAVION_CFG_BLOCK
	default y

config RAVION_HAVE_MMC
	default y

config RAVION_CFG_BLOCK_DEV
	default "0"

config RAVION_CFG_BLOCK_PART
	default "1"

# Toradex config block in eMMC, at the end of 1st "boot sector"
config RAVION_CFG_BLOCK_OFFSET
	default "-512"

config RAVION_CMD_IMX_MFGR
	bool "Enable factory testing commands for Toradex iMX 6 modules"
	help
	  This adds the commands
	    pf0100_otp_prog - Program the OTP fuses on the PMIC PF0100
	  If executed on already fused modules it doesn't change any fuse setting.
	default y

source "board/ravion/common/Kconfig"

endif
